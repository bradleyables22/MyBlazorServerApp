@code
{
    //Used opensource Typewriter. 
    //github.com/ormesam/blazor-typewriter/commit/11025ae103fad55a77c4e200193bf214ebb669d3
    TypewriterBuilder typewriter = new TypewriterBuilder(defaultCharacterPause: 6)
        .TypeString("Bradley Ables")
        .Pause(1000)
        .DeleteAll(30)
        .TypeString(".NET Developer", 50)
        .Pause(1000)
        .DeleteAll(30)
        .TypeString("Twitter: @TenaciousD_ata", 50)
        .Pause(1000)
        .DeleteAll(30)
        .TypeString("Discord: TenaciousD_ata#3302", 50)
        .Pause(1000)
        .DeleteAll(30)
        .Loop();

}